<odoo>
    <template
    id="report_purchasequotation_document_inherit"
    inherit_id="purchase.report_purchasequotation_document"
  >
        <xpath expr="//th[@name='th_quantity']" position="before">
            <th name="th_quantity_pack" class="text-end">
                <strong>Qty Package</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']/../td[3]" position="before">
            <td class="text-end">
                <span t-field="line.product_packaging_qty" />
                <span t-field="line.product_packaging_id" />
            </td>
        </xpath>
    </template>

    <template
    id="report_purchaseorder_document_inherit"
    inherit_id="purchase.report_purchaseorder_document"
  >
        <xpath expr="//th[@name='th_quantity']" position="before">
            <th name="th_quantity_pack" class="text-end">
                <strong>Qty Package</strong>
            </th>
        </xpath>
        <xpath expr="//td[@id='product']/../td[4]" position="before">
            <td class="text-end">
                <span t-field="line.product_packaging_qty" />
                <span t-field="line.product_packaging_id" />
            </td>
        </xpath>
    </template>
</odoo>
