<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="wiz_picking_box_label_form_view" model="ir.ui.view">
        <field name="name">wiz.picking.box.label.form.view</field>
        <field name="model">wiz.picking.box.label</field>
        <field name="arch" type="xml">
            <form string="Label Box Wizard">
                <sheet>
                    <group colspan="4">
                        <group>
                            <field name="picking_id" />
                            <field name="number_of_labels_to_print" />
                        </group>
                        <group>
                            <field name="product_ids" invisible="1" />
                            <field name="lot_ids" invisible="1" />
                        </group>
                        <field name="label_box_line_ids" colspan="4" nolabel="1">
                            <tree editable="top">
                                <field
                  name="product_id"
                  domain="[('id', 'in', parent.product_ids)]"
                  widget="selection"
                />
                                <field
                  name="lot_id"
                  domain="[('id', 'in', parent.lot_ids)]"
                  widget="selection"
                />
                                <field name="product_qty" />
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button
            string="Print"
            name="print_box_labels"
            type="object"
            class="oe_highlight"
          />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="wiz_picking_box_label_action" model="ir.actions.act_window">
        <field name="name">Print Box Labels</field>
        <field name="res_model">wiz.picking.box.label</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{}</field>
        <field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="view_id" ref="wiz_picking_box_label_form_view" />
    </record>
</odoo>
