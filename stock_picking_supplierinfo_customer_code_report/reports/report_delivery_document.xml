<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <th name="th_sm_product" position="before">
            <th
        name="th_sm_product_customer_code"
        t-if="o.picking_type_id.code == 'outgoing'"
      >
                <strong>Cust. Cod.</strong>
            </th>
        </th>
        <xpath expr="//span[@t-field='move.product_id']/.." position="before">
            <td
        name="td_product_customer_code"
        t-if="o.picking_type_id.code == 'outgoing'"
      >
                <span
          t-if="move.sale_line_id"
          t-field="move.sale_line_id.product_customer_code"
        /><br />
            </td>
        </xpath>
        <th name="th_sml_product" position="before">
            <th
        name="th_sml_product_customer_code"
        t-if="o.picking_type_id.code == 'outgoing'"
      >
                <strong>Cust. Cod.</strong>
            </th>
        </th>
    </template>

    <template
    id="stock_report_delivery_has_serial_move_line"
    inherit_id="stock.stock_report_delivery_has_serial_move_line"
  >
        <xpath expr="//span[@t-field='move_line.product_id']/.." position="before">
            <td t-if="o.picking_type_id.code == 'outgoing'">
                <span
          t-if="move_line.sale_line_id"
          t-field="move_line.sale_line_id.product_customer_code"
        />
            </td>
        </xpath>
    </template>

    <template
    id="stock_report_delivery_aggregated_move_lines"
    inherit_id="stock.stock_report_delivery_aggregated_move_lines"
  >
        <xpath expr="//td[1]" position="before">
            <td t-if="o.picking_type_id.code == 'outgoing'">
                <span
          t-esc="aggregated_lines[line]['product_customer_code']"
          t-if="aggregated_lines.get(line) and aggregated_lines[line].get('product_customer_code')"
        />
            </td>
        </xpath>
    </template>
</odoo>
